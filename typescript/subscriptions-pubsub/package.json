{
  "name": "subscriptions-pubsub",
  "license": "MIT",
  "scripts": {
    "postinstall": "npm run generate",
    "predev": "npm run generate:prisma",
    "dev": "cross-env NODE_ENV=development tsnd --no-notify --respawn --transpileOnly ./src",
    "prebuild": "cross-env NODE_ENV=production npm run clean && npm run generate",
    "build": "cross-env NODE_ENV=production tsc",
    "seed": "ts-node prisma/seed.ts",
    "clean": "rimraf dist",
    "generate": "npm run generate:prisma && npm run generate:nexus",
    "generate:prisma": "prisma generate",
    "generate:nexus": "ts-node --transpile-only ./src/schema",
    "start": "cross-env NODE_ENV=production node dist/src/index.js"
  },
  "dependencies": {
    "@nexus/schema": "^0.13.1",
    "@prisma/client": "^2.0.0-beta.5",
    "apollo-server": "^2.13.0",
    "dotenv": "^8.1.0",
    "nexus-prisma": "^0.12.0"
  },
  "devDependencies": {
    "@prisma/cli": "^2.0.0-beta.5",
    "@types/node": "^13.11.0",
    "@types/prettier": "^2.0.0",
    "cross-env": "^7.0.2",
    "prettier": "^2.0.5",
    "rimraf": "^3.0.0",
    "ts-node": "^8.8.2",
    "ts-node-dev": "1.0.0-pre.44",
    "typescript": "3.8.3"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  }
}
