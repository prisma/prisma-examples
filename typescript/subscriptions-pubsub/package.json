{
  "name": "subscriptions-pubsub",
  "license": "MIT",
  "scripts": {
    "predev": "npm run generate:prisma",
    "dev": "cross-env NODE_ENV=development tsnd --no-notify --respawn --transpile-only ./src",
    "prebuild": "npm run clean && npm run generate",
    "build": "tsc",
    "seed": "ts-node prisma/seed.ts",
    "clean": "rimraf dist",
    "generate": "npm run generate:prisma && npm run generate:nexus",
    "generate:prisma": "prisma generate",
    "generate:nexus": "ts-node --transpile-only ./src/schema",
    "start": "cross-env NODE_ENV=production node dist/src/index.js"
  },
  "dependencies": {
    "@prisma/client": "2.13.1",
    "apollo-server": "2.19.1",
    "dotenv": "8.2.0",
    "nexus": "1.0.0",
    "nexus-plugin-prisma": "0.27.0"
  },
  "devDependencies": {
    "@prisma/cli": "2.13.1",
    "@types/node": "13.13.38",
    "@types/prettier": "2.1.6",
    "cross-env": "7.0.3",
    "prettier": "2.2.1",
    "rimraf": "3.0.2",
    "ts-node": "9.1.1",
    "ts-node-dev": "1.1.1",
    "typescript": "4.1.3"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  }
}
