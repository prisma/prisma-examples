{
  "name": "subscriptions-pubsub",
  "license": "MIT",
  "scripts": {
    "postinstall": "npm run generate",
    "predev": "npm run generate:prisma",
    "dev": "cross-env NODE_ENV=development tsnd --no-notify --respawn --transpileOnly ./src",
    "prebuild": "npm run clean && npm run generate",
    "build": "tsc",
    "seed": "ts-node prisma/seed.ts",
    "clean": "rimraf dist",
    "generate": "npm run generate:prisma && npm run generate:nexus",
    "generate:prisma": "prisma generate",
    "generate:nexus": "ts-node --transpile-only ./src/schema",
    "start": "cross-env NODE_ENV=production node dist/src/index.js"
  },
  "dependencies": {
    "@nexus/schema": "0.14.0",
    "@prisma/client": "2.2.2",
    "apollo-server": "2.15.1",
    "dotenv": "8.2.0",
    "nexus-prisma": "^0.12.0"
  },
  "devDependencies": {
    "@prisma/cli": "2.2.2",
    "@types/node": "13.13.14",
    "@types/prettier": "2.0.1",
    "cross-env": "7.0.2",
    "prettier": "2.0.5",
    "rimraf": "3.0.2",
    "ts-node": "8.10.2",
    "ts-node-dev": "1.0.0-pre.50",
    "typescript": "3.9.6"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  }
}
