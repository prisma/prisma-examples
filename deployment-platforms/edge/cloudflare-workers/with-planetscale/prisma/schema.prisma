generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma" // recommended for PlanetScale DBs
}

model User {
  id    Int     @id @default(autoincrement())
  email String  @unique
  name  String?
}
