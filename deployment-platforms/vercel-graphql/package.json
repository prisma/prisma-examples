{
  "name": "prisma-vercel-graphql",
  "scripts": {
    "start": "node dist/graphql",
    "clean": "rm -rf dist",
    "build": "npm -s run generate && tsc",
    "generate": "npm -s run generate:prisma && npm -s run generate:nexus",
    "generate:prisma": "prisma generate",
    "generate:nexus": "GENERATE_ARTIFACTS=true ts-node --transpile-only api/_lib/schema",
    "dev": "GENERATE_ARTIFACTS=true ./node_modules/.bin/tsc-watch --onSuccess 'npx micro ./dist/index.js'"
  },
  "dependencies": {
    "@prisma/client": "2.17.0-dev.12",
    "@types/node-fetch": "2.5.8",
    "apollo-server-micro": "2.19.2",
    "graphql": "15.5.0",
    "nexus": "1.0.0",
    "nexus-plugin-prisma": "0.29.0"
  },
  "devDependencies": {
    "@now/node": "1.8.5",
    "@types/node": "12.19.16",
    "prisma": "2.17.0-dev.12",
    "ts-node": "9.1.1",
    "ts-node-dev": "1.1.1",
    "tsc-watch": "4.2.9",
    "typescript": "4.1.3",
    "vercel": "21.2.2"
  },
  "prettier": {
    "singleQuote": true,
    "semi": false,
    "trailingComma": "all"
  },
  "engines": {
    "node": "12.x"
  }
}
