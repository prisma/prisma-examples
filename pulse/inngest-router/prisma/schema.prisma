generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-musl"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Notification {
  id      String @id @default(cuid())
  title   String
  message String
}

model User {
  id    String @id @default(cuid())
  name  String
  email String
}
