generator client {
  provider = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
	id Int @id @default(autoincrement())
	title String
	description String?
	stock Int @default(0)
	createdAt DateTime @default(now())
	updatedAt DateTime? @updatedAt
}
